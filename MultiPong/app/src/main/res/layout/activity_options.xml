<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hot_pink">

    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/back104"
        style="@style/Widget.AppCompat.Button.Borderless"/>
    <ImageView
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/musiclogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <SeekBar
        android:id="@+id/seekBarMusic"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:max="99"
        android:progress="50"
        android:layout_below="@+id/music"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <ImageView
        android:id="@+id/sfx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sfxlogo"
        android:layout_below="@+id/seekBarMusic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <SeekBar
        android:id="@+id/seekBarSFX"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:max="99"
        android:progress="50"
        android:layout_below="@+id/sfx"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>